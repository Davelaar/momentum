
[Unit]
Description=Momentum metrics HTTP (aiohttp)
After=network.target

[Service]
Type=simple
User=snapdiscounts
Group=psacln
WorkingDirectory=/var/www/vhosts/snapdiscounts.nl/momentum
Environment=APP=/var/www/vhosts/snapdiscounts.nl/momentum
Environment=OBS_HTTP_HOST=127.0.0.1
Environment=OBS_HTTP_PORT=9201
ExecStart=/var/www/vhosts/snapdiscounts.nl/momentum/.venv/bin/python -m momentum.scripts.metrics_http
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
